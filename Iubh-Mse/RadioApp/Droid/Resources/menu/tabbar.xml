<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"     
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#80FFFFFF"
        android:weightSum="5">
	<LinearLayout
		android:id="@+id/tabbar_listen"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="vertical">
		<ImageView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:id="@+id/tabbar_listenImage"
			android:src="@drawable/icon_play"
		android:layout_gravity="center_horizontal" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tabbar_playlist"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		>
		<ImageView
			android:id="@+id/tabbar_playlistImage"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_playlist"
			android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tabbar_wish"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/tabbar_wishImage"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_wish"
			android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tabbar_rate"
		android:layout_weight="1"
	  android:layout_width="0dp"
	  android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
	  android:orientation="vertical">
		<ImageView
			android:id="@+id/tabbar_rateImage"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_rate"
			android:layout_gravity="center_horizontal"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tabbar_service"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/tabbar_serviceImage"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_service"
			android:layout_gravity="center_horizontal"/>
	</LinearLayout>
</LinearLayout>